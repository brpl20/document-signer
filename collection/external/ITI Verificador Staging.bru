meta {
  name: ITI Verificador (Staging)
  type: http
  seq: 2
}

post {
  url: {{iti_staging_url}}/report
  body: multipartForm
  auth: none
}

body:multipart-form {
  report_type: json
  signature_files[]: @file(./test/document.pdf.p7s)
  detached_files[]: @file(./test/document.pdf)
  verify_incremental_updates: true
}

vars:pre-request {
  iti_staging_url: https://verificador.staging.iti.br
}

settings {
  encodeUrl: true
}

docs {
  Validate signature using the ITI Verificador STAGING environment.
  Use this for testing with test/homologation certificates.

  Staging URL: https://verificador.staging.iti.br

  Note: Homologation certificates should be validated here,
  while production ICP-Brasil certificates should use the production endpoint.
}
